<div class="container">
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <%= image_tag(@article.image.url, alt: 'Image') if @article.image? %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.author %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

  <%= link_to 'Edit', edit_article_path(@article),  class: 'btn btn-default' %>


<%= link_to 'All Articles', articles_path, class: 'btn btn-primary' %>
</div>
